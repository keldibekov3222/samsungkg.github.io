(function(){var c=window.sg.common.$q,e=window.sg.common.swiperManager,f=null,g=function(){f.find("p.usp-banner__desc").target.forEach(function(a){a=c(a);var b=a.attr("data-an-page-track"),d=a.attr("data-an-headline-text");a.find("a").target.forEach(function(a){a.setAttribute("an-tr","ft17_usp banner-"+b+"-text-link");a.setAttribute("an-ca","content click");a.setAttribute("an-ac","feature");a.setAttribute("an-la","usp banner:"+d)})});f.target.forEach(function(a){var b=c(a);if(b.hasClass("usp-banner--bg-dynamic")){var d=
b.find(".swiper-container");a=function(){d.find(".swiper-slide-active").hasClass("dynamic--bg-light-gray")?(b.addClass("dynamic--bg-light-gray"),b.removeClass("dynamic--bg-blue")):d.find(".swiper-slide-active").hasClass("dynamic--bg-blue")&&(b.addClass("dynamic--bg-blue"),b.removeClass("dynamic--bg-light-gray"))};e.getSwiper(d.target[0]).on("transitionEnd",a);a()}})},h=function(){f=c(".usp-banner");f.target.length&&g()};c.ready(h);window.sg.components.uspBanner={init:h,reInit:function(){c(".usp-banner").find(".basic-swiper").target.forEach(function(a){e.getSwiper(a)?
